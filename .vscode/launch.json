  "version": "0.2.0",
  "configurations": [
      {
          "name": "(gdb) Launch",
          "type": "cppdbg",
          "request": "launch",
          "program": "${command:cmake.launchTargetPath}",
          "args": [],
          "stopAtEntry": true, // cannot seem to launch external window without debugging (and externalConsole set to true), set to false and run with debugging
          "cwd": "${workspaceFolder}",
          "externalConsole": true,
          "MIMode": "gdb",
          "miDebuggerPath": "C:\\Mingw-w64\\mingw64\\bin\\gdb.exe",
          "logging": { "engineLogging": true},
          "setupCommands": [
              {
                  "description": "Enable pretty-printing for gdb",
                  "text": "-enable-pretty-printing",
                  "ignoreFailures": true
              }
          ]
      }
  ]
}